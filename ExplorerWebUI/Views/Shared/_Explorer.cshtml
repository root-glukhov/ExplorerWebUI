@model IEnumerable<ExplorerViewModel>

<table class="table table-striped">
    <thead>
        <tr>
            <th> Name </th>
            <th> Size </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if(item.isDirectory)
                    {
                        <i class="bi bi-folder"> 
                            <button class="btn btn-link" type="submit" name="path" value="@item.Path"> @item.Name </button>
                        </i>
                    }
                    else
                    {
                        <i class="bi bi-earmark"> @item.Name </i>
                    }
                </td>
                <td> 
                    @ExplorerViewModel.BytesToString(item.Size) 
                </td>
            </tr>
        }
    </tbody>
</table>